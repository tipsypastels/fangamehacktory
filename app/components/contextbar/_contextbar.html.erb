<div class="contextbar">
  <% if contextbar.actions.present? %>
    <div class="contextbar__actions">
      <% contextbar.actions.each do |action| %>
        <% if action.divider? %>
          <div class="contextbar__divider"></div>
        <% else %>
          <%= action.link do %>
            <%= action.icon %>

            <div class="contextbar__action__name">
              <%= action.name %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>